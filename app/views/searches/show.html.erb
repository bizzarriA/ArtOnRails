
<%if @search == nil %>
  <div id="banner">
    <h2>Nessuna opera rispetta i tuoi parametri di ricerca!</h2>
  </div>
<%else %>
  <div id="main">
    <%@search.each do |opera| %>
      <article class="thumb">
        <%=link_to image_tag(opera.url.url), (opera.url.url),class: 'image' %>
        <h2><%= opera.titolo %></h2>
        provaaaa
        <p> <%= opera.tecnica %>,<%= opera.anno %></p>
        <%#if current_user.id == @user.id %>
          <%#= link_to 'Modifica', edit_opera_path(opera.id), class: "button"%>
        <%#end %>
      </article>
    <%end %>
    <article>
      <%#if current_user.id == @user.id %>
        <%#=link_to 'aggiungi nuova opera', new_opera_path, class: "button"%>
      <%#end %>
    </article>
  </div>
<%end %>
