<p id="notice"><%= notice %></p>

<h1>Operas</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @operas.each do |opera| %>
      <tr>
        <td><%= link_to 'Show', opera %></td>
        <td><%= link_to 'Edit', edit_opera_path(opera) %></td>
        <td><%= link_to 'Destroy', opera, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

